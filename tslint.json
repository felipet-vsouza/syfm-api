{
    "rules": {
        "whitespace": false,
        "curly": true,
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "no-duplicate-variable": true,
        "class-name": true
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}